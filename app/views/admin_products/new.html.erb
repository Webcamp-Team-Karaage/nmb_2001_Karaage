<h1>商品　新規登録画面</h1>
<%= form_for(@admin_product ,url: admin_products_path) do |e| %>
    <%= e.attachment_field :products_image%>
    <%= e.submit "画像選択"%>
<%end%>

<%= form_for(@admin_product ,url: admin_products_path) do |f| %>
    
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name%></br>
    <%= f.label :text, "商品説明" %>
    <%= f.text_area :text %></br>
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.select :genre_id,[[1],[3]]%></br>
    <%= f.label :price, "税抜き価格" %>
    <%= f.text_field :price%></br>
    <%= f.label :status, "販売ステータス" %>
    <%= f.select :status,[[1],[2]]%></br>
    <%= f.submit "新規登録"%>
<%end%>
