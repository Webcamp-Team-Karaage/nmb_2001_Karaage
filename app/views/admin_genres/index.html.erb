<h1>ジャンル一覧・追加画面</h1>

    <%= form_for(@genre ,url: admin_genres_path) do |f| %>
        <%= f.label :name, "ジャンル" %>
        <%= f.text_field :name%>
        <%=f.submit "作成" %>
    <%end%>


<table border = "1>"
    <% @genres.each do  |genre|%>
        <tr>
            <td><%= genre.name %></td>
            <td><%= genre.status%></td>
        </tr>
    <%end%>
</table>