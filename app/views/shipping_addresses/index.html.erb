<!-- 配送先新規登録フォーム -->
<h2>配送先登録/一覧</h2>
	<%= form_for(@shipping_address) do |f| %>

	  <h4>郵便番号</h4>
	  <%= f.text_field :postal_code %>

	  <h4>住所</h4>
	  <%= f.text_field :address %>

	  <h4>宛名</h4>
	  <%= f.text_field :address_name %>

	  <%= f.submit '登録する' %>
  	<% end %>

<!-- ↓空欄エラー表示 -->
	<% if @shipping_address.errors.any? %>
		<h2><%= @shipping_address.errors.count %>errorです。</h2>
    	<ul>
      		<% @shipping_address.errors.full_messages.each do |message| %>
        		<li><%= message %></li>
      		<% end %>
    	</ul>
	<% end %>

<!-- 配送先一覧 -->
<table>
	 <thead>
		 <tr>
			 <th>郵便番号</th>
			 <th>住所</th>
			 <th>宛名</th>
			 <th colspan="2"></th>
		 </tr>
	 </thead>
	 <tbody>
	   <% @shipping_addresses.each do |shipping_address| %>
		 <tr>
			 <td><%= shipping_address.postal_code %></td>
			 <td><%= shipping_address.address %></td>
			 <td><%= shipping_address.address_name %></td>
			 <th><%= link_to "編集する", edit_shipping_address_path(shipping_address.id) %></th>
			 <th><%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete, "data-confirm" => "本当に削除しますか?" %></th>
		 </tr>
	   <% end %>
	 </tbody>
 </table>