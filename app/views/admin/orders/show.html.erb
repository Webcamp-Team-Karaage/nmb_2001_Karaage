<h2>注文詳細画面</h2>

<section>
	<h4>購入者</h4>
	<%= link_to admin_member_path(@admin_order.member) do %>
		<%= @admin_order.member.first_name %>
		<%= @admin_order.member.last_name %>
	<% end %>
</section>
<section>
	<h4>お届け先</h4>
	〒<%= @admin_order.postal_code %>
	<%= @admin_order.address %>
	<%= @admin_order.address_name %>
</section>
<section>
	<h4>支払い方法</h4>
	<%= @admin_order.payment %>
</section>
<section>
	<h4>注文ステータス</h4>
	<%= form_for(@admin_order, url: admin_order_path) do |f| %>
		<%= f.select :status, ["入金待ち", "入金確認", "製作中", "発送準備中", "発送済み"] %>
	<%= f.submit "更新" %>
	<% end %>
</section>

<table>
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th>製作ステータス</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
    <% @admin_order.order_products.each do |product| %>
        <tr>
            	<!-- 商品名 -->
            <td><%= product.product.name %></td>
            	<!-- 単価（税込） -->
			<td><%= product.price_tax.floor %></td>
            	<!-- 数量 -->
            <td><%= product.count %></td>
            	<!-- 小計 -->
            <td><%= (product.price_tax * product.count).floor %></td>
            	<!-- 製作ステータス -->
            <td>
            	<%= form_for(product, url: admin_order_product_path) do |f| %>
					<%= f.select :status, ["着手不可", "製作待ち", "製作中", "製作完了"] %>
				<%= f.submit "更新" %>
				<% end %>
            </td>
        </tr>
    <% end %>
	</tbody>
</table>

<h4>商品合計</h4>
<%= (@price_sum * 1.1).floor %>
<h4>送料</h4>
<%= @admin_order.postage %>
<h4>請求金額合計</h4>
<%= @admin_order.total_price %>

