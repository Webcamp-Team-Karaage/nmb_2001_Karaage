<h2>注文詳細画面</h2>

<section>
	<h4>購入者</h4>
	<%= link_to admin_member_path(@admin_order.member) do %>
		<%= @admin_order.member.first_name %>
		<%= @admin_order.member.last_name %>
	<% end %>
</section>
<section>
	<h4>お届け先</h4>
	〒<%= @admin_order.postal_code %>
	<%= @admin_order.address %>
	<%= @admin_order.address_name %>
</section>
<section>
	<h4>支払い方法</h4>
	<%= @admin_order.payment %>
</section>
<section>
	<h4>注文ステータス</h4>
	<%= form_for(@admin_order, url: admin_order_path) do |f| %>
		<%= f.select :status, ["入金待ち", "入金確認", "製作中", "発送準備中", "発送済み"] %>
	<%= f.submit "更新" %>
	<% end %>
</section>

