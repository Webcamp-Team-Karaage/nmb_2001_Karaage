<div class="row">
	<div class="col-xs-offset-1 col-xs-9">
		<h2 class="page-title">登録情報編集</h2>
	</div>
</div>


<div class="row">
	<div class="col-xs-offset-1 col-xs-9">

	<%= form_for(@member,:url => {controller: "admin/members", :action => :update}) do |f| %>
	<table class="table table-bordered">
		<thead>
			<tr>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th class="active">会員ID</th>
				<td><%= @member.id %></td>
			</tr>
			<tr>
				<th class="active">氏名</th>
				<td><%= f.text_field :first_name %><%= f.text_field :last_name %></td>
			</tr>
			<tr>
				<th class="active">カナ</th>
				<td><%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %></td>
			</tr>
			<tr>
				<th class="active">郵便番号</th>
				<td><%= f.text_field :postal_code %></td>
			</tr>
			<tr>
				<th class="active">住所</th>
				<td><%= f.text_field :address, :size=>"50" %></td>
			</tr>
			<tr>
				<th class="active">電話番号</th>
				<td><%= f.text_field :phone %></td>
			</tr>
			<tr>
				<th class="active">メールアドレス</th>
				<td><%= f.email_field :email, :size=>"50" %></td>
			</tr>
			<tr>
				<th class="active">会員ステータス
				</th>
				<td><label><%= f.radio_button :status, '有効' %>有効</label>
					<label><%= f.radio_button :status, '退会済' %>退会済み</label></td>
			</tr>
		</tbody>
	</table>
	<%= f.submit "変更を保存する",class: "btn btn-primary center-block" %>
	<% end %>
	</div>
</div>