<div class="row">

	<div class="col-xs-offset-1 col-xs-9">
		<h2 class="page-title">会員詳細画面</h2>
	</div>
</div>

<div class="row">
	<div class="col-xs-offset-1 col-xs-9">

	<table class="table table-bordered">
		<thead>
			<tr>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th class="active">顧客ID</th>
				<td>
					<%= @member.id %>
						<% if @member.status == '有効' %>
							<span class="label label-info">有効会員</span>
						<%  else %>
							<span class="label label-danger">退会済会員</span>
						<% end %>
				</td>
			</tr>
			<tr>
				<th class="active">氏名</th>
				<td><%= @member.first_name %><%= @member.last_name %></td>
			</tr>
			<tr>
				<th class="active">カナ</th>
				<td><%= @member.first_name_kana %><%= @member.last_name_kana %></td>
			</tr>
			<tr>
				<th class="active">郵便番号</th>
				<td><%= @member.postal_code %></td>
			</tr>
			<tr>
				<th class="active">住所</th>
				<td><%= @member.address %></td>
			</tr>
			<tr>
				<th class="active">電話番号</th>
				<td><%= @member.phone %></td>
			</tr>
			<tr>
				<th class="active">メールアドレス</th>
				<td><%= @member.email %></td>
			</tr>
		</tbody>
	</table>

			<%= link_to "編集する", edit_admin_member_path(@member.id),class: "btn btn-primary" %>
			<%= link_to "注文履歴一覧を見る", orders_path,class: "btn btn-info" %>

	</div>
</div>
