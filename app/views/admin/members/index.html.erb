<div class="row">
	<div class="col-xs-offset-1 col-xs-9">
		<h2 class="page-title">会員一覧画面</h2>

		<table class= "table table-bordered">
			<thead>
				<tr class="active">
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @members.each do |member| %>
					<tr>
					<td><%= member.id %></td>
					<td><%= link_to admin_member_path(member.id) do %><%= member.first_name %><%= member.last_name %><% end %></td>
					<td><%= member.email %></td>
					<td><%= member.status %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>