<div class = "container">
  <div class ="row">
    <div class="col-xs-offset-1 col-xs-10">
      <h2 class = "genre-edit-title">ジャンル編集画面</h2>
      <div class = "genre-edit">
      <%= form_for(@genre ,url: admin_genre_path) do |f| %>
        <%= f.label :name, "ジャンル" %>
        <%= f.text_field :name%>
        <%= f.radio_button :status, :"true",{value: :true} %>
        <%= f.label :status,"有効" %>
        <%= f.radio_button :status, :"false",{value: :false} %>
        <%= f.label :status,"無効" %>
        <%=f.submit "変更を保存する",class:"btn btn-info" %>
      <%end%>
      </div>
    </div>
  </div>
</div>
