<div class ="container">
  <div class = "row">
    <h1>商品詳細画面</h1>
    <div class = "col-xs-3 float-left clearfixr">
    <p><%=  attachment_image_tag @admin_product, :product_image,format:'jpeg',size: "90x90"%></p>
    </div>
    <div class ="col-xs-4 float-left text-center">
      <p><%=label :name, "商品名",class:"column-name"%>
        <%= @admin_product.name%></p>
      <p><%=label :text, "商品説明",class:"column-name"%>
      <%= @admin_product.text%></p>
      <p><%=label :genre_id, "ジャンル",class:"column-name"%>
       <%= @admin_product.genre_id%></p>
      <p><%=label :price, "税込価格(税抜き価格)",class:"column-name"%>
         <%= (@admin_product.price*1.1).floor%>
         (<%= @admin_product.price %>)</p>
      <p><%=label :status, "販売ステータス",class:"column-name"%>
         <%= @admin_product.status%></p>
  </div>
  <div class ="col-xs-3 float-left text-center edit">
    <p><%= link_to "編集する",edit_admin_product_path(@admin_product.id),class:"btn btn-info"%></p>
  </div>
  </div>
</div>
