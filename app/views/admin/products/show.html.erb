<div class ="container">
  <div class = "row this">
    <h3>商品詳細画面</h3>
    <div class = "col-xs-3 float-left">
    <p><%=  attachment_image_tag @admin_product, :product_image,format:'jpeg',size: "90x90"%></p>
    </div>
    <div class ="col-xs-6 float-left">
    <table>
    <tr>
      <th><%=label :name, "商品名",class:"column-name"%></th>
      <td><%= @admin_product.name%></td>
    </tr>
    <tr>
      <th><%=label :text, "商品説明",class:"column-name"%></th>
      <td><%= @admin_product.text%></td>
    </tr>
    <tr>
      <th><%=label :genre_id, "ジャンル",class:"column-name"%></th>
      <td><%= @admin_product.genre.name%></td>
    </tr>
    <tr>
      <th><%=label :price, "税込価格(税抜き価格)",class:"column-name"%></th>
      <td><%= (@admin_product.price*1.1).floor%>(<%= @admin_product.price %>)</td>
    </tr>
    <tr>
      <th><%=label :status, "販売ステータス",class:"column-name"%></th>
      <td><%= @admin_product.status%></td>
    </tr>
    </table>
  </div>
  <div class ="float-left text-center edit">
    <p><%= link_to "編集する",edit_admin_product_path(@admin_product.id),class:"btn btn-info"%></p>
  </div>
  </div>
</div>
