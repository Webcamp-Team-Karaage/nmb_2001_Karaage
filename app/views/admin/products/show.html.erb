<div class ="container">
  <div class = "row">
    <h1>商品詳細画面</h1>
    <div class = "col-xs-3 float-left">
    <p><%=  attachment_image_tag @admin_product, :product_image,format:'jpeg',size: "90x90"%></p>
    </div>
    <div class ="col-xs-4 float-left">
    <table>
    <tr>
      <td><p><%=label :name, "商品名",class:"column-name"%><td>
        <td><%= @admin_product.name%></p></td>
    </tr>
    <tr>
      <td><p><%=label :text, "商品説明",class:"column-name"%></td>
      <td><%= @admin_product.text%></p></td>
    </tr>
    <tr>
      <td><p><%=label :genre_id, "ジャンル",class:"column-name"%></td>
       <td><%= @admin_product.genre_id%></p></td>
    </tr>
    <tr>
      <td><p><%=label :price, "税込価格(税抜き価格)",class:"column-name"%></td>
         <td><%= (@admin_product.price*1.1).floor%>
         (<%= @admin_product.price %>)</p></td>
      </tr>
    <tr>
      <td><p><%=label :status, "販売ステータス",class:"column-name"%></td>
         <td><%= @admin_product.status%></p></td>
    </tr>
    </table>
  </div>
  <div class ="col-xs-3 float-left text-center edit">
    <p><%= link_to "編集する",edit_admin_product_path(@admin_product.id),class:"btn btn-info"%></p>
  </div>
  </div>
</div>
