<div class ="container">
  <div class ="row this">
    <h3 class ="title">商品編集画面</h3>
    <%= form_for(@admin_product ,url: admin_product_path) do |f| %>
    <div class = "col-xs-3">
      <%=  attachment_image_tag @admin_product, :product_image,format:'jpeg',size: "90x90"%>
      <%= f.attachment_field :product_image%>
    </div>
    <div class ="col-xs-5">
      <table>
      <tr>
        <th><%= f.label :name, "商品名", class:"title" %></th>
        <td><%= f.text_field :name, class:"body" %></td>
      </tr>
      <tr>
        <th><%= f.label :text, "商品説明", class:"title" %></th>
        <td><%= f.text_area :text, class:"body" %></td>
      </tr>
      <tr>
        <th><%= f.label :genre_id, "ジャンル", class:"title" %></th>
        <td><%= f.collection_select :genre_id, @genres, :id, :name, class:"body" %></td>
      </tr>
      <tr>
        <th><%= f.label :price, "税抜き価格", class:"title" %></th>
        <td><%= f.text_field :price, class:"body"%></td>
      </tr>
      <tr>
        <th><%= f.label :status, "販売ステータス", class:"title" %></th>
        <td><%= f.select :status, Product.statuses.keys{}, class:"body"%></td>
      </tr>
      </table>
      <div class ="pull-right">
        <%= f.submit "変更内容を保存", class:"btn btn-info" %>
      </div>
    <%end%>
    </div>
  </div>
</div>
