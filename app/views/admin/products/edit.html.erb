<div class ="container">
  <div class ="row">
    <h1 class ="title">商品　編集画面</h1>
    <%= form_for(@admin_product ,url: admin_product_path) do |f| %>
    <div class = "col-xs-3">
      <%=  attachment_image_tag @admin_product, :product_image,format:'jpeg',size: "90x90"%>
      <%= f.attachment_field :product_image%>
    </div>
    <div class ="col-xs-5">
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name%>
      <%= f.label :text, "商品説明" %>
      <%= f.text_area :text %>
      <%= f.label :genre_id, "ジャンル" %>
      <%= f.collection_select :genre_id, @genres, :id, :name %>
      <%= f.label :price, "税抜き価格" %>
      <%= f.text_field :price%>
      <%= f.label :status, "販売ステータス" %>
      <%= f.select :status, Product.statuses.keys{}%>
      <%= f.submit "変更内容を保存"%>
    <%end%>
  </div>
</div>
