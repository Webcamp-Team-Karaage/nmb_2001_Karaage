<div class="body">
  <div class="container">
    <div class="row">
      <!-- ジャンル部分テンプレート -->
      <div class="col-xs-2 genre-box">
        <h3 class="genre-search-title text-center">ジャンル検索</h3>
        <div class="genre-link">
          <% @genres.each do |genre| %>
          <%= link_to genre.name,products_path(id: genre.id) %><br>
          <% end %>
        </div>
      </div>

      <!-- 商品一覧ページ -->
      <div class="col-xs-10">
        <div class="row">
          <div><%= attachment_image_tag @admin_product, :product_image,format:'jpeg',size: "90x90" %></div>
          <section><%= @admin_product.name %></section>
          <section><%= @admin_product.text %></section>
          <section>￥<%= @admin_product.price %> (税込)</section>
        </div>

        <div class="row">
          <%= form_for(@cart_product,:url => {controller: "cart_products", :action => :create}) do |f| %>
            個数選択<%= f.text_field :count %>
            <%= f.hidden_field :product_id, :value => @admin_product.id %>
            <%= f.submit "カートに入れる", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
