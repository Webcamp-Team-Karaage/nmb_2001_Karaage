<div class="body">
  <div class="container">
    <div class="row">
      <!-- ジャンル部分テンプレート -->
      <div class="col-xs-2"></div>

      <!-- 商品一覧ページ -->
      <div class="col-xs-10">
        <div>
          <div><%= attachment_image_tag @admin_product, :product_image,format:'jpeg',size: "90x90" %></div>
          <section><%= @admin_product.name %></section>
          <section><%= @admin_product.text %></section>
          <section>￥<%= @admin_product.price %> (税込)</section>
        </div>

        <%= form_for(@cart_product,:url => {controller: "cart_products", :action => :create}) do |f| %>
          <div>
            個数選択<%= f.text_field :count %>
            <%= f.hidden_field :product_id, :value => @admin_product.id %>
          </div>
          <div>
            <%= f.submit "カートに入れる" %>
          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>
