<div class="body">
  <div class="container">
    <div class="row">
      <!-- ジャンル部分テンプレート -->
      <div class="col-xs-2 genre-box">
        <h3 class="genre-search-title text-center">ジャンル検索</h3>
        <div class="genre-link">
          <% @genres.each do |genre| %>
          <%= link_to genre.name,products_path(id: genre.id) %><br>
          <% end %>
        </div>
      </div>

      <!-- 商品詳細ページ -->
      <div class="product-show">
          <div class="col-xs-offset-1 col-xs-3">
            <%= attachment_image_tag @admin_product, :product_image,format:'jpeg',size: "200x200", class: "product-img" %>
          </div>
          <div class="col-xs-5">
            <h2 class="product-name"><%= @admin_product.name %></h2>
            <p class="product-text"><%= @admin_product.text %></p>
            <h4 class="price"><%= number_to_currency(@admin_product.price * 1.1, unit: "￥", strip_insignificant_zeros: true) %> (税込)</h4>

            <%= form_for(@cart_product,:url => {controller: "cart_products", :action => :create}) do |f|  %>
              <%= f.text_field :count, placeholder:"個数を入力",class: "count" %>
              <%= f.hidden_field :product_id, :value => @admin_product.id %>
              <%= f.submit "カートに入れる", class: "btn btn-primary" %>
            <% end %>

          </div>

    </div>
  </div>
</div>
