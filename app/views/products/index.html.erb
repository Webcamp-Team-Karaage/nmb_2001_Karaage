<div class="body">
  <div class="container">
    <div class="row">
      <!-- ジャンル部分テンプレート -->
      <div class="col-xs-2">
        <p class="genre-search-title">ジャンル検索</p>
      </div>

      <!-- 商品一覧ページ -->
      <div class="col-xs-10">
        <h2>ケーキ (全<%= Product.count %>件)</h2>
        <div>
          <% @admin_products.each do |admin_product| %>
            <ul>
              <li>
                <div>
                  <%= link_to product_path(admin_product.id) do %>
                    <%= attachment_image_tag admin_product, :product_image,format:'jpeg',size: "90x90" %>
                <% end %>
                </div>
                <div><%= admin_product.name %></div>
                <div>￥<%= admin_product.price %></div>
              </li>
            </ul>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
