<div class="body">
  <div class="container">
    <div class="row">
      <!-- ジャンル部分テンプレート -->
      <div class="col-xs-2"></div>

      <!-- 商品一覧ページ -->
      <div class="col-xs-10">
        <h2>ケーキ (全X件)</h2>
        <div>
          <% @products.each do |product| %>
            <ul>
              <li>画像<%= link_to adimin_product_path(product.id) do %>
                  <%= attachment_image_tag product, :product_image, :fill, 100, 120, format: 'jpeg' %>
                <% end %>
              </li>
              <li>商品名<%= product.name %></li>
              <li>価格<%= product.price %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
