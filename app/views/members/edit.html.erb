<div class="row">
	<div class="col-xs-offset-1 col-xs-9">
		<h2 class="page-title">登録情報編集
		<%= link_to "退会する", delete_me_path, class: "btn btn-danger" %></h2>
	</div>
</div>


<div class="row">
	<div class="col-xs-offset-1 col-xs-9">

	<%= form_for(@member) do |f| %>
	<table class="table table-bordered">
		<thead>
			<tr>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th class="active">氏名</th>
				<td><%= f.text_field :first_name %><%= f.text_field :last_name %></td>
			</tr>
			<tr>
				<th class="active">カナ</th>
				<td><%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %></td>
			</tr>
			<tr>
				<th class="active">郵便番号</th>
				<td>〒<%= f.text_field :postal_code %>(ハイフン必須)</td>
			</tr>
			<tr>
				<th class="active">住所</th>
				<td><%= f.text_field :address, :size=>"50" %></td>
			</tr>
			<tr>
				<th class="active">電話番号</th>
				<td><%= f.text_field :phone %>(ハイフン不要)</td>
			</tr>
			<tr>
				<th class="active">メールアドレス</th>
				<td><%= f.email_field :email, :size=>"50" %></td>
			</tr>
		</tbody>
	</table>
	<%= f.submit "編集内容を保存する",class: "btn btn-primary center-block" %>
	<% end %>
	</div>
</div>