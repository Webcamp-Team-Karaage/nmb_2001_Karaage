<div class="row">
	<div class="col-xs-offset-1 col-xs-9">
		<h1>注文情報詳細</h1>
	</div>
</div>

<div class="row">
	<div class="col-xs-offset-1 col-xs-6">
		<h3>注文情報</h3>
		<table class="table table-bordered">
		<thead>
			<tr>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th class="info">注文日</th>
				<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
			</tr>
			<tr>
				<th class="info">配送先</th>
				<td>〒<%= @order.postal_code %><br>
	                  <%= @order.address %><br>
	                  <%= @order.address_name %></td>
			</tr>
			<tr>
				<th class="info">支払い方法</th>
				<td><%= @order.payment %></td>
			</tr>
			<tr>
				<th class="info">ステータス</th>
				<td><%= @order.status %></td>
			</tr>
		</tbody>
		</table>
	</div>

	<div class="col-xs-4">
		<h3>請求情報</h3>
		<table class="table table-bordered">
		<thead>
			<tr>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th class="info">商品合計</th>
				<td><%= (@price_sum * 1.1).floor %></td>
			</tr>
			<tr>
				<th class="info">配送料</th>
				<td><%= @order.postage %></td>
			</tr>
			<tr>
				<th class="info">ご請求額</th>
				<td><%= @order.total_price %></td>
			</tr>
		</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-xs-offset-1 col-xs-6">
		<h3>注文内容</h3>
			<table class= "table table-bordered">
			<thead>
				<tr class="info">
					<th>商品</th>
					<th>単価(税込)</th>
					<th>個数</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
			<% @order.order_products.each do |order_product| %>
					<tr>
					<td><%= order_product.product.name %></td>
					<td><%= (order_product.product.price * 1.1).floor %></td>
					<td><%= order_product.count %></td>
					<td><%= (order_product.product.price * 1.1).floor * order_product.count %></td>
					</tr>
			<% end %>
			</tbody>
		</table>
	</div>
</div>