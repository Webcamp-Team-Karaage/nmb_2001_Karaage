<div class="row">
	<div class="col-xs-offset-1 col-xs-9">
		<h1 class="page-title">注文履歴一覧</h1>
	</div>

<div class="row">
	<div class="col-xs-offset-1 col-xs-10 order-table">

		<table class = "table table-bordered table-inverse">
            <thead>
              <tr class="info">
                <th class="text-center">注文日</th>
                <th class="text-center">配送先</th>
                <th class="text-center">注文商品</th>
                <th class="text-center">支払い金額</th>
                <th class="text-center">ステータス</th>
                <th class="text-center">注文詳細</th>
              </tr>
            </thead>
            <tbody>
				<% @orders.each do |order| %>
	            	<tr>
	                  <td class="order-table"><%= order.created_at.strftime('%Y/%m/%d') %></td>
	                  <td class="order-table">〒<%= order.postal_code %><br>
	                  	<%= order.address %><br>
	                  	<%= order.address_name %></td>
	                  <td class="order-table">
	                    <% order.order_products.each do |order_product| %>
	                    <%= order_product.product.name %><br>
	                    <% end %>
	                  </td class="order-table">
	                  <td class="order-table"><%= order.total_price %></td>
	                  <td class="order-table"><%= order.status %></td>
	                  <td class="order-table text-center"><%= link_to "表示する", order_path(order.id),class: "btn btn-info" %></td>
	                </tr>
        		<% end %>
            </tbody>
          </table>

    </div>
</div>