<div class="body">
  <div class="container">


          <h2>購入情報入力</h2>


        <%= form_for(@order, :url => {controller: "orders", action: :new}) do |f| %>
          <h3>支払方法</h3>
          <div class="input-box">
              <%= f.radio_button :payment, :クレジットカード %>
              <%= f.label :クレジットカード %><br>
             <%= f.radio_button :payment, :銀行振込 %>
             <%= f.label :銀行振り込み%><br>
          </div>





          <h3>お届け先</h3>
            <div class="input-box">
              <label><%= radio_button_tag "address_select", "1" %>ご自身の住所</label>
              <div class="address-box">
                〒 <%= current_member.postal_code %> <%= current_member.address %><br>
                <%= current_member.first_name %><%= current_member.last_name %>
              </div>
              <label><%= radio_button_tag "address_select", "2" %>登録済みの住所から選択</label>
              <div class="address-box">
                <%= f.collection_select :member_id, @shipping_addresses, :id, :shippinng %>
              </div>

              <label><%= radio_button_tag "address_select", "3" %>新しいお届け先</label>
              <div class="address-box">
              <table>
                <thead>
                </thead>
                <tbody>
                  <tr>
                    <th>郵便番号　〒</th>
                    <td><%= f.text_field :postal_code %>ハイフン必須</td>
                  </tr>
                  <tr>
                    <th>住所</th>
                    <td><%= f.text_field :address %></td>
                  </tr>
                  <tr>
                    <th>宛名</th>
                    <td><%= f.text_field :address_name %></td>
                  </tr>
                </tbody>
              </table>

                </div>
            </div>





              <%= f.submit "確認画面へ進む", class: "btn btn-primary btn-lg center-block" %>
        <% end %>



  </div>
</div>
